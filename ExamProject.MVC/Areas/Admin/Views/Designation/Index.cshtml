@using ExamProject.Core.Models
@model List<Designation>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    int TableNo = 1;
}

<div class="card shadow mb-4 w-100">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Designation List</h6>
        <a asp-action="Create" asp-controller="Designation" class="btn btn-outline-primary ml-auto">Create Designation</a>
    </div>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th colspan="2" scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@(TableNo++)</th>
                        <td>@item.Name</td>
                        <td><a asp-action="Update" asp-controller="Designation" class="btn btn-success" asp-route-id="@item.Id">Update</a></td>
                        <td><a asp-action="Delete" asp-controller="Designation" class="btn btn-danger" asp-route-id="@item.Id">Delete</a></td>
                    </tr>
                }
            }
            else
            {
                <td>No exist Designation</td>
            }

    </table>
</div>

